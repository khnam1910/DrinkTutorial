<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgBV"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="12dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvTieuDeBV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="4dp"
            android:textColor="@color/title"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Tên Bài Viết" />

        <TextView
            android:id="@+id/tvNoiDungBV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/description"
            android:textSize="14sp"
            tools:text="Mô tả ngắn về đồ uống sẽ được hiển thị ở đây với tối đa ba dòng để tránh tràn văn bản." />

        <TextView
            android:textColor="@color/description"
            android:layout_marginTop="5dp"
            android:textAlignment="textEnd"
            android:id="@+id/tvNgayDang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="14sp"
            android:text="19/10/2003" />
    </LinearLayout>
</LinearLayout>